# Docker Environment Variables
# Copy this file to .env.docker for custom configurations

# Application
NODE_ENV=production
PORT=3001

# Database Configuration
DB_TYPE=sqlite
DB_DATABASE=/app/data/database.sqlite
DB_SYNCHRONIZE=false
DB_LOGGING=false

# API Configuration
API_PREFIX=api/v1
CORS_ENABLED=true

# Security
VALIDATION_WHITELIST=true
VALIDATION_FORBID_NON_WHITELISTED=true

# Docker specific
COMPOSE_PROJECT_NAME=desafio-isi

# For production with persistent database
# Uncomment and modify as needed
# DB_DATABASE=/app/data/production.sqlite

# For development
# NODE_ENV=development
# DB_LOGGING=true
# DB_SYNCHRONIZE=true
